    <script >
  // Function to select and update the dropdown option
  function selectOption(option) {
        document.getElementById('btnGroupDrop1').innerHTML = `<i class="fa fa-globe"></i> ${option}`;
    }

    // Handle the dropdown menu visibility
    document.getElementById('btnGroupDrop1').addEventListener('click', function () {
        var dropdown = document.getElementById('dropdownMenu');
        if (dropdown.classList.contains('show')) {
            dropdown.classList.remove('show');
        } else {
            dropdown.classList.add('show');
        }
    });

    // Close the dropdown menu when clicking outside of it
    window.onclick = function (event) {
        if (!event.target.matches('#btnGroupDrop1')) {
            var dropdown = document.getElementById('dropdownMenu');
            if (dropdown.classList.contains('show')) {
                dropdown.classList.remove('show');
            }
        }
    }
    // Submit the form when Enter key is pressed
    document.getElementById('searchInput').addEventListener('keyup', function (event) {
        if (event.key === 'Enter') {
            searchFunction();
        }
    });

    </script>

